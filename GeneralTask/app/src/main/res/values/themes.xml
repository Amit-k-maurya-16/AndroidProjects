<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeneralTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GeneralTask.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="splash_screen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Set the splash screen background to black -->

        <item name="android:windowBackground">@drawable/logo</item>
        <item name="android:windowSplashScreenBackground">@color/teal_700</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/black</item>
        <item name="android:windowSplashScreenAnimationDuration">2000</item>

    </style>
    <style name="Theme.GeneralTask.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GeneralTask.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>